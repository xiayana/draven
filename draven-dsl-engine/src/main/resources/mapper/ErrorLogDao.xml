<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lab8.engine.dao.ErrorLogDao">

    <resultMap type="com.lab8.engine.entity.ErrorLog" id="ErrorLogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="numberUuid" column="number_uuid" jdbcType="VARCHAR"/>
        <result property="msg" column="msg" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ErrorLogMap">
        select
          id, number_uuid, msg, create_time
        from error_log
        where id = #{id}
    </select>


    <select id="queryAll" resultMap="ErrorLogMap">
        select
        id, number_uuid, msg, create_time
        from error_log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="numberUuid != null and numberUuid != ''">
                and number_uuid = #{numberUuid}
            </if>
            <if test="msg != null and msg != ''">
                and msg = #{msg}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>
    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from error_log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="numberUuid != null and numberUuid != ''">
                and number_uuid = #{numberUuid}
            </if>
            <if test="msg != null and msg != ''">
                and msg = #{msg}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into error_log(number_uuid, msg, create_time)
        values (#{numberUuid}, #{msg}, NOW())
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into error_log(number_uuid, msg, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.numberUuid}, #{entity.msg}, #{entity.createTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into error_log(number_uuid, msg, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.numberUuid}, #{entity.msg}, #{entity.createTime})
        </foreach>
        on duplicate key update
        number_uuid = values(number_uuid),
        msg = values(msg),
        create_time = values(create_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update error_log
        <set>
            <if test="numberUuid != null and numberUuid != ''">
                number_uuid = #{numberUuid},
            </if>
            <if test="msg != null and msg != ''">
                msg = #{msg},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from error_log where id = #{id}
    </delete>

</mapper>

